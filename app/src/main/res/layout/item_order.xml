<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section with Image and Order Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Order Image -->
            <ImageView
                android:id="@+id/imageOrder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_nono"
                android:background="@color/pink_primary"
                android:contentDescription="@string/order_image"
                app:cardCornerRadius="8dp"/>

            <!-- Order Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <!-- Order ID -->
                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_001"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/pink_primary"/>

                <!-- Order Time -->
                <TextView
                    android:id="@+id/tvOrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_14_30_15_2024"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp"/>

                <!-- Menu Name -->
                <TextView
                    android:id="@+id/tvMenuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/กาแฟลาเต้"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- Status Indicator -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/กำลังดำเนินการ"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/status_processing_bg"
                android:padding="8dp"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Order Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Cup Size -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ขนาดแก้ว"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/tvCupSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ใหญ่"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <!-- Toppings -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ท็อปปิ้ง"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/tvToppings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ไข่มุก"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:alpha="0.3"
            android:layout_marginVertical="12dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Complete Button -->
            <Button
                android:id="@+id/btnComplete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/เสร็จสิ้น"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/status_completed"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"/>

            <!-- Processing Button -->
            <Button
                android:id="@+id/btnProcessing"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/กำลังทำ"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/status_processing"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"/>

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/ยกเลิก"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/status_cancelled"
                android:paddingHorizontal="16dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>